# ============================================
# 3BLEX NETWORK - Environment Variables
# ============================================
# Copia questo file come .env e modifica i valori

# Database PostgreSQL
DATABASE_URL=postgresql://user:password@localhost:5432/3blex_network

# JWT Secret (genera con: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))")
JWT_SECRET=your-super-secret-jwt-key-change-this

# Server
PORT=8080
NODE_ENV=development

# Frontend URL (per CORS e link referral)
FRONTEND_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:8080

# Admin di default (cambia in produzione!)
ADMIN_EMAIL=admin@3blex.com
ADMIN_PASSWORD=Admin123!

# Stripe (opzionale)
STRIPE_SECRET_KEY=sk_test_xxx
STRIPE_PUBLISHABLE_KEY=pk_test_xxx
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_xxx

# Email SMTP (opzionale)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your@email.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@3blex.com
